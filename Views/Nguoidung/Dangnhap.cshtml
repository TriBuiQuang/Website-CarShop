
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

    <section id="view-all-projects" class="call-to-action bg-color text-center" data-speed="5" data-type="background">
        <div>

            <table align="center" cellpadding="20">
                <h2 style="text-align:center; padding:20px">ĐĂNG NHẬP</h2>
                @using (Html.BeginForm())
            {
                    @Html.ValidationSummary(true)

                    <tr style="height:40px">
                        <td>Tài khoản: </td>
                        <td>
                            @Html.TextBox("TenDN")

                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Mật khẩu: </td>
                        <td>
                            @Html.Password("Matkhau")

                        </td>
                    </tr>
                    <h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
                    <tr style="height:40px">
                        <td></td>
                        <td>
                            <button type="submit" value="Đăng nhập" class="btn btn-primary">Đăng nhập</button>
                            <button type="submit" value="Đăng ký" class="btn btn-primary">@Html.ActionLink("Đăng ký", "Dangky", "Nguoidung")</button>
                            <button type="submit" value="Quên tài khoản" class="btn btn-primary">@Html.ActionLink("Quên tài khoản", "QuenMK", "Nguoidung")</button>
                        </td>
                    </tr>

                }
            </table>
        </div>
    </section>

    


