@model Car.Models.KhachHang
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

    <section id="view-all-projects" class="call-to-action bg-color " data-speed="5" data-type="background">
        <table align="center" cellpadding="20">
            <h3 style="text-align:center; padding:20px">Đăng Ký</h3>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <h3 style="color:red" class="text-center">@ViewData["Loi7"]</h3>
                <tr style="height:40px; color:black">
                    <td>Họ tên: </td>
                    <td>

                        @Html.TextBox("HoTenKH")
                        @ViewData["Loi1"]
                    </td>
                </tr>
                <tr style="height:40px; color:black">
                    <td>Tên đăng nhập: </td>
                    <td>
                        @Html.TextBox("TenDN")
                        @ViewData["Loi2"]
                    </td>
                </tr>
                <tr style="height:40px; color:black">
                    <td>Mật khẩu: </td>
                    <td>
                        @Html.Password("Matkhau")
                        @ViewData["Loi3"]
                    </td>
                </tr>
                    <tr style="height:40px; color:black">
                        <td>Nhập lại mật khẩu: </td>
                        <td>
                            @Html.Password("Nhaplaimk")
                            @ViewData["Loi4"]
                        </td>
                    </tr>
                    <tr style="height:40px; color:black">
                        <td>Điện thoại: </td>
                        <td>
                            @Html.TextBox("Dienthoai")
                            @ViewData["Loi5"]
                        </td>
                    </tr>
                    <tr style="height:40px; color:black">
                        <td>Email: </td>
                        <td>
                            @Html.TextBox("Diachimail")
                            @ViewData["Loi6"]
                        </td>
                    </tr>
                    <tr style="height:40px; color:black">
                        <td></td>
                        <td>
                            <a class="btn-primary btn-sm" href="@Url.Action("Dangnhap","Nguoidung")" id="searchbtn" style="text-decoration:none;">Đăng Nhập</a>
                            <button type="submit" value="Đăng ký" class="btn-primary btn-sm" id="searchbtn" style="text-decoration:none;">Đăng Ký</button>
                    </tr>
            }
        </table>
        </section>
   
