@model Car.Models.SanPham

@{
    ViewBag.Title = "Themmoisp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Thêm Mới Sản Phẩm</h2>

